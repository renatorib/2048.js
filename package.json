{
  "name": "2048.js",
  "version": "1.0.1",
  "description": "2048 game functions",
  "author": "Renato Ribeiro",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "browser": "dist/2048.min.js",
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd":
      "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/2048.js",
    "build:umd:min":
      "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/2048.min.js",
    "build:all":
      "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build": "npm run clean && npm run build:all",
    "clean": "rimraf lib dist es",
    "lint": "eslint src",
    "test": "jest && npm run lint"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.1",
    "babel-jest": "^22.0.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.14.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^22.0.4",
    "np": "^2.18.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.53.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  }
}
